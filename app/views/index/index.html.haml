#search
  %h2 Rechercher un livre
  = form_tag(search_books_path, :method => "get") do 
    = text_field_tag(:q) 
    = submit_tag("Rechercher") 

#left-table
  %h2 5 livres les plus lus
  %table.table
    %tr
      %th Titre
      %th Auteur
      %th nombre de lecture
    - @most_read_books.each do |book|
      %tr
        %td= book.title
        %td= book.author
        %td= book.read_count

