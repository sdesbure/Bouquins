%p#notice= notice

%h2 livres m'appartenant
%table.table
  %tr
    %th Titre
    %th Auteur
    %th
  - @editions.each do |edition|
    %tr
      %td= edition.book.title
      %td= edition.book.author
      %td 
        - unless @user.read_editions.include? edition
          = form_tag readings_path do
            = hidden_field_tag 'reading[read_edition_id]', "#{edition.id}", :id => "reading_read_edition_id"
            = hidden_field_tag 'reading[reader_id]', "#{@user.id}", :id => "reading_reader_id"
            = submit_tag "Je l'ai lu"


= link_to 'Retour', user_path(@user)
